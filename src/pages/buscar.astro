---
import BaseLayout from "../layouts/BaseLayout.astro";
import SearchBox from "../components/SearchBox.astro";
import Landing from "../components/Landing.astro";
import { getImage } from "astro:assets";

// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import landingImage from "@assets/images/landing.jpg";
const optimizedImage = await getImage({ src: landingImage, format: "avif" });
---

<BaseLayout
  title="Buscador"
  description="Busca en todas las noticias y bandos del Ayuntamiento de Belmontejo"
  preloadedImage={optimizedImage}
>
  <main id="main-content">
    <Landing
      title="Buscador"
      image={optimizedImage}
    >
      <p>
        Encuentra rápidamente información en noticias y bandos del Ayuntamiento
        de Belmontejo
      </p>
    </Landing>

    <!-- ============================================ -->
    <!--                Search Section              -->
    <!-- ============================================ -->
    <section
      id="search-section"
      class="cs-search-section"
    >
      <div class="cs-container">
        <div class="cs-search-wrapper">
          <SearchBox />
        </div>

        <div class="cs-search-tips">
          <h3>Consejos para buscar:</h3>
          <ul>
            <li>
              Usa palabras clave específicas como "agua", "obras", "servicios
              sociales"
            </li>
            <li>Combina varios términos para resultados más precisos</li>
            <li>
              La búsqueda incluye títulos, descripciones y contenido completo
            </li>
            <li>
              Los resultados se muestran ordenados por fecha (más recientes
              primero)
            </li>
          </ul>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style lang="less">
  @import "../styles/pages/buscar.less";
</style>
