---
import BaseLayout from '@layouts/BaseLayout.astro';
import CTA from '@components/sections/CTA.astro';
import Landing from '@components/sections/Landing.astro';
import ImageGallery from '@components/sections/ImageGallery.astro';
import { portfolioGallery } from '@data/galleryImages';

// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import landingImage from '@assets/images/vista-aerea-2.jpg'; // <-- THE PATH TO THE ASSET YOU WANT TO PRELOAD - The asset must live in src
import { getImage } from 'astro:assets';
const optimizedImage = await getImage({ src: landingImage, format: 'avif' });
---

<BaseLayout
  title="Galería de fotos - Ayuntamiento de Belmontejo"
  description="Explora la colección de imágenes del municipio y descubre sus rincones."
  preloadedImage={optimizedImage}
>
  <!-- ============================================ -->
  <!--                    LANDING                   -->
  <!-- ============================================ -->

  <Landing title="Galería de fotos" image={optimizedImage}>
    <p>
      Descubre los paisajes, monumentos y momentos que hacen único a Belmontejo.
      Navega por la galería para ver nuestras fotografías destacadas.
    </p>
  </Landing>

  <!-- ============================================ -->
  <!--                   Gallery                    -->
  <!-- ============================================ -->

  <ImageGallery
    id="gallery"
    rows={portfolioGallery}
    cta={{ href: '/contacto', label: 'Contactar' }}
  />
  <CTA />
</BaseLayout>

<style lang="less">
  @import '../styles/pages/galeria.less';
</style>
