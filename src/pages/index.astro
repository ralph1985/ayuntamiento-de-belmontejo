            />
            <source
              media="(min-width: 601px)"
              srcset="/assets/images/portfolio/port3.jpg"
            />
            <img
              aria-hidden="true"
              decoding="async"
              src="/assets/images/portfolio/port3.jpg"
              alt="new kitchen"
              loading="lazy"
              width="400"
              height="560"
            />
          </picture>
          <picture class="cs-picture cs-picture2">
            <source
              media="(max-width: 600px)"
              srcset="/assets/images/portfolio/port6-m.jpg"
            />
            <source
              media="(min-width: 601px)"
              srcset="/assets/images/portfolio/port6.jpg"
            />
            <img
              aria-hidden="true"
              decoding="async"
              src="/assets/images/portfolio/port6.jpg"
              alt="apartment addition"
              loading="lazy"
              width="400"
              height="560"
            />
          </picture>
          <picture class="cs-picture cs-picture3">
            <source
              media="(max-width: 600px)"
              srcset="/assets/images/portfolio/port9-m.jpg"
            />
            <source
              media="(min-width: 601px)"
              srcset="/assets/images/portfolio/port9.jpg"
            />
            <img
              aria-hidden="true"
              decoding="async"
              src="/assets/images/portfolio/port9.jpg"
              alt="kew kitchen cabinets"
              loading="lazy"
              width="400"
              height="560"
            />
          </picture>
        </div>
      </div>
      <Button href="/proyectos">Ver todos los proyectos</Button>
    </div>
  </section>

  <!-- ============================================ -->
  <!--                    FAQ                       -->
  <!-- ============================================ -->
  <FAQ />

  <!-- ============================================ -->
  <!--                   Reviews                    -->
  <!-- ============================================ -->

  <section id="reviews">
    <div class="cs-container">
      <span class="cs-topper">Testimonios</span>
      <h2 class="cs-title">Lo que dicen de Belmontejo</h2>
      <p class="cs-text">
        Las voces de quienes han visitado nuestro pueblo y de quienes forman
        parte de nuestra comunidad. Belmontejo deja huella en todos los que
        descubren la calidez de la vida rural manchega y la belleza de los
        paisajes que nos rodean.
      </p>
      <ul class="cs-card-group">
        {
          featuredTestimonials.map(testimonial => (
            <TestimonialCard testimonial={testimonial} variant="home" />
          ))
        }
      </ul>
      <Button aria-label="read more reviews" href="/testimonios">
        Más testimonios
      </Button>
    </div>
  </section>

  <!-- ============================================ -->
  <!--              Contenido Destacado             -->
  <!-- ============================================ -->

  <section id="featured-content">
    <div class="cs-container">
      <div class="cs-content">
        <span class="cs-topper">Lo más relevante</span>
        <h2 class="cs-title">Contenido Destacado</h2>
        <p class="cs-text">
          Mantente al día con las noticias más importantes y los bandos
          oficiales de nuestro municipio.
        </p>
      </div>
      <div class="featured-content-wrapper">
        <FeaturedContent type="both" limit={6} />
      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!--               Redes Sociales                 -->
  <!-- ============================================ -->

  <section id="social-media" class="social-media-section">
    <div class="cs-container">
      <div class="cs-content">
        <span class="cs-topper">Conecta con nosotros</span>
        <h2 class="cs-title">Síguenos en Redes Sociales</h2>
        <p class="cs-text">
          Mantente informado de todas las novedades, eventos y noticias de
          nuestro municipio. Síguenos en nuestras redes sociales para estar al
          día.
        </p>
      </div>
      <div class="social-links-wrapper">
        <SocialMediaLinks className="homepage-social" />
      </div>
    </div>
  </section>

  <CTA />
</BaseLayout>

