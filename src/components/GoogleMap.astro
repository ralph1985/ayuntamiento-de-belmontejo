---
interface Props {
  title?: string;
  subtitle?: string;
  mapId?: string;
}

const {
  title = "Ubicación",
  subtitle = "Encuéntranos en el mapa",
  mapId = "belmontejo-map",
} = Astro.props;
---

<!-- ============================================ --><!--                 Google Map                   --><!-- ============================================ -->
<section id="google-map">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">{subtitle}</span>
      <h2 class="cs-title">{title}</h2>
      <p class="cs-text">
        Belmontejo se encuentra en la provincia de Cuenca, en la comarca de la
        Manchuela. Su ubicación estratégica le permite disfrutar tanto de la
        tranquilidad rural como de un fácil acceso a las principales vías de
        comunicación de la región.
      </p>
    </div>
    <div class="cs-map-wrapper">
      <iframe
        id={mapId}
        class="cs-map"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3064.332427429821!2d-2.3477586732267373!3d39.82196387154136!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd67fb1cf1bc9843%3A0x3ee48dbef9ea2994!2s16779%20Belmontejo%2C%20Cuenca!5e0!3m2!1ses!2ses!4v1761373475830!5m2!1ses!2ses"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Mapa de Belmontejo, Cuenca"
      >
      </iframe>
    </div>
  </div>
</section>

<style lang="less">
  /*-- -------------------------- -->
  <---        Google Map          -->
  <--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0em) {
    #google-map {
      padding: var(--sectionPadding);
      background-color: var(--background-sections);

      .cs-container {
        width: 100%;
        max-width: (1280/16rem);
        margin: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: (48/16rem);
      }

      .cs-content {
        text-align: center;
        width: 100%;
        max-width: (630/16rem);
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .cs-topper {
        color: var(--primary);
        margin-bottom: (16/16rem);
      }

      .cs-title {
        margin-bottom: (24/16rem);
      }

      .cs-text {
        margin-bottom: 0;
        color: var(--bodyTextColor);
      }

      .cs-map-wrapper {
        width: 100%;
        height: (400/16rem);
        border-radius: (16/16rem);
        overflow: hidden;
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
        position: relative;
      }

      .cs-map {
        width: 100%;
        height: 100%;
        border: none;
        filter: grayscale(0.3);
        transition: filter 0.3s ease;

        &:hover {
          filter: grayscale(0);
        }
      }
    }
  }

  /* Tablet - 768px */
  @media only screen and (min-width: 48em) {
    #google-map {
      .cs-container {
        gap: (64/16rem);
      }

      .cs-map-wrapper {
        height: (500/16rem);
      }
    }
  }

  /* Desktop - 1024px */
  @media only screen and (min-width: 64em) {
    #google-map {
      .cs-container {
        flex-direction: row;
        align-items: flex-start;
        gap: (80/16rem);
      }

      .cs-content {
        text-align: left;
        align-items: flex-start;
        max-width: (500/16rem);
        flex: 0 0 auto;
      }

      .cs-map-wrapper {
        flex: 1;
        height: (400/16rem);
      }
    }
  }

  /* Dark Mode */
  @media only screen and (min-width: 0em) {
    body.dark-mode {
      #google-map {
        background-color: var(--dark);

        .cs-topper {
          color: var(--primaryLight);
        }

        .cs-title {
          color: var(--bodyTextColorWhite);
        }

        .cs-text {
          color: var(--bodyTextColorWhite);
        }

        .cs-map {
          filter: grayscale(0.5) invert(0.1);

          &:hover {
            filter: grayscale(0.2) invert(0);
          }
        }
      }
    }
  }
</style>
