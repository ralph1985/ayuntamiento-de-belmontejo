---
import type { IconBulletItem } from '@types/content';

interface Props {
  id?: string;
  class?: string;
  items: IconBulletItem[];
}

const {
  id = 'icon-bullet-list',
  class: customClass = '',
  items = [],
} = Astro.props as Props;

const sectionClass = ['services', customClass].filter(Boolean).join(' ');
---

<section id={id} class={sectionClass}>
  {
    items.map(item => (
      <div class="card">
        <picture>
          <img
            aria-hidden="true"
            decoding="async"
            src={item.icon}
            alt={item.iconAlt}
            width={item.iconWidth ?? 48}
            height={item.iconHeight ?? 48}
          />
        </picture>
        <h2>{item.title}</h2>
        <p>{item.description}</p>
      </div>
    ))
  }
</section>

<style lang="less" is:global>
  @media only screen and (min-width: 0em) {
    .services {
      width: 90%;
      max-width: (1320/16em);
      margin: auto;
      margin-top: (-167/16em);
      margin-bottom: (50/16em);
      padding: (50/16em) (20/16em);
      background: #fff;
      box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.05);
      border-top: (6/16em) solid var(--primary);
      border-radius: (5/16em);
      position: relative;
      z-index: 100;

      .card {
        width: 100%;
        max-width: (357/16em);
        margin: auto;
        margin-bottom: (50/16em);
        display: block;

        &:last-of-type {
          margin-bottom: 0;
        }

        picture {
          width: (88/16em);
          height: (88/16em);
          margin: auto;
          margin-bottom: (23/16em);
          background: var(--primary);
          border-radius: 50%;
          display: flex;
          justify-content: center;
          align-items: center;

          img {
            width: (48/16em);
            height: (48/16em);
          }
        }

        h2 {
          font-size: (32/16em);
          font-weight: 700;
          line-height: 27/20em;
          text-align: center;
          margin-bottom: 13/20em;
          color: #1a1a1a;
        }

        p {
          line-height: 24/18em;
          text-align: center;
          width: 100%;
          opacity: 0.7;
        }
      }
    }
  }

  @media only screen and (min-width: 768px) {
    .services {
      font-size: ~'min(1.8vw, 1em)';
      width: 98%;
      display: flex;
      justify-content: space-between;
      align-items: flex-start;

      .card {
        max-width: (325/16em);
        margin: 0;
      }
    }
  }

  @media only screen and (min-width: 1300px) {
    .services {
      padding: (50/16em) (80/16em);

      .card {
        max-width: (357/16em);
      }
    }
  }

  @media only screen and (min-width: 0em) {
    body.dark-mode {
      .services {
        background: var(--medium);

        picture {
          background: var(--primaryDark);
        }

        h2 {
          font-weight: bold;
          color: #fff;
        }
      }
    }
  }
</style>
