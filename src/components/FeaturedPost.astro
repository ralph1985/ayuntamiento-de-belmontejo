---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { formatDate } from '@js/utils';
import '@styles/sidebar.less';

const posts = await getCollection('noticias');
const featuredPosts = posts.filter(post => post.data.isFeatured === true);
---

<h3 class="news-sidebar_widget-header">Noticias Destacadas</h3>
{
  featuredPosts.map(post => (
    <a class="news-sidebar_widget-link" href={`/noticias/${post.id}`}>
      <picture class="news-sidebar_widget-image">
        <Image
          src={post.data.image}
          alt={post.data.imageAlt}
          width="60"
          height="60"
          decoding="async"
        />
      </picture>
      <div class="content-group">
        <h4 class="news-sidebar_widget-h4">{post.data.title}</h4>
        <span class="news-sidebar_widget-date">
          {formatDate(post.data.date)}
        </span>
      </div>
    </a>
  ))
}
