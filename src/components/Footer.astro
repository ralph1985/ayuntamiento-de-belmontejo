---
import client from '@data/client.json';
import navDataEs from '@data/navData.es.json';
import navDataEn from '@data/navData.en.json';
import footerServices from '@data/footerServices.json';
import { getCurrentYear } from '@js/utils';
import packageJson from '../../package.json';
import { useTranslations } from 'src/i18n';

const locale = Astro.currentLocale;
const t = useTranslations(locale);

const navData = locale === 'en' ? navDataEn : navDataEs;

const currentYear = getCurrentYear();
const version = packageJson.version;

// Filter navigation data to show admin menu only when enabled
const showAdminMenu = import.meta.env.PUBLIC_ADMIN_MENU === 'true';
const filteredNavData = navData.filter(entry => {
  if (entry.isAdmin) {
    return showAdminMenu;
  }
  return true;
});
---

<!-- ============================================ --><!--                   Footer                     --><!-- ============================================ -->
<footer id="footer">
  <div class="container">
    <div class="left-section">
      <a class="logo" href="/"
        ><img
          loading="lazy"
          decoding="async"
          src="/assets/images/escudo.png"
          alt="logo"
          width="264"
          height="78"
        /></a
      >
      <p>{t.header.title}</p>
    </div>
    <div class="right-section">
      <div class="lists">
        <ul>
          <li>
            <h2>Información</h2>
          </li>
          {
            filteredNavData.map(entry => (
              <li class="cs-li">
                <a
                  href={entry.url}
                  target={entry.isAdmin ? '_blank' : undefined}
                  rel={entry.isAdmin ? 'noopener noreferrer' : undefined}
                >
                  {entry.key}
                </a>
              </li>
            ))
          }
          <li class="cs-li">
            <a href="/politica-de-cookies"> Política de Cookies </a>
          </li>
        </ul>
        <ul>
          <li>
            <h2>Servicios</h2>
          </li>
          {
            footerServices.services.map(service => (
              <li>
                {service.isActive && service.url ? (
                  <a
                    href={service.url}
                    target={service.isExternal ? '_blank' : undefined}
                    rel={service.isExternal ? 'noopener noreferrer' : undefined}
                  >
                    {service.title}
                  </a>
                ) : (
                  service.title
                )}
              </li>
            ))
          }
        </ul>
        <ul>
          <li>
            <h2>Contacto</h2>
          </li>
          <li>
            <a href="/contacto">
              {client.address.lineOne}<br />
              {client.address.lineTwo}<br />
              {client.address.city}
              {client.address.state}
              {client.address.zip}
            </a>
          </li>
          <li>
            <a href={`tel:${client.phoneForTel}`}>
              T:
              {client.phoneFormatted}
            </a>
          </li>
          <li>
            <a href={`mailto:${client.email}`}>Enviar correo</a>
          </li>
        </ul>
        <ul>
          <li>
            <h2>Síguenos</h2>
          </li>
          {
            client.socialMedia?.facebook && (
              <li class="cs-li">
                <a
                  href={client.socialMedia.facebook}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="social-link"
                >
                  <svg
                    class="social-icon"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                  </svg>
                  Facebook
                </a>
              </li>
            )
          }
          {
            client.socialMedia?.instagram && (
              <li class="cs-li">
                <a
                  href={client.socialMedia.instagram}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="social-link"
                >
                  <svg
                    class="social-icon"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                  </svg>
                  Instagram
                </a>
              </li>
            )
          }
        </ul>
      </div>
    </div>
  </div>

  <div class="credit">
    <span>Sitio web oficial del</span>
    <a href="/" target="_blank" rel="noopener">Ayuntamiento de Belmontejo</a>.
    <span class="copyright-version"> Copyright {currentYear} | v{version}</span>
  </div>
</footer>

<style lang="less">
  @import '../styles/components/footer.less';
</style>
