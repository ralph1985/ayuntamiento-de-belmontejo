---
import client from "@data/client.json";
import navData from "@data/navData.json";
import { getCurrentYear } from "@js/utils";

const currentYear = getCurrentYear();

// Filter navigation data to show admin menu only when enabled
const showAdminMenu = import.meta.env.PUBLIC_ADMIN_MENU === "true";
const filteredNavData = navData.filter((entry) => {
  if (entry.isAdmin) {
    return showAdminMenu;
  }
  return true;
});
---

<!-- ============================================ --><!--                   Footer                     --><!-- ============================================ -->
<footer id="footer">
  <div class="container">
    <div class="left-section">
      <a
        class="logo"
        href="/"
        ><img
          loading="lazy"
          decoding="async"
          src="/assets/images/escudo.png"
          alt="logo"
          width="264"
          height="78"
        /></a
      >
      <p>
        Ayuntamiento de Belmontejo - Un pueblo pequeño con alma grande en el
        corazón de la Manchuela conquense. Preservando nuestra historia y
        tradiciones para las futuras generaciones.
      </p>
    </div>
    <div class="right-section">
      <div class="lists">
        <ul>
          <li>
            <h2>Información</h2>
          </li>
          {
            filteredNavData.map((entry) => (
              <li class="cs-li">
                <a
                  href={entry.url}
                  target={entry.isAdmin ? "_blank" : undefined}
                  rel={entry.isAdmin ? "noopener noreferrer" : undefined}
                >
                  {entry.key}
                </a>
              </li>
            ))
          }
          <li class="cs-li">
            <a href="/politica-de-cookies"> Política de Cookies </a>
          </li>
        </ul>
        <ul>
          <li>
            <h2>Servicios</h2>
          </li>
          <li>Información municipal</li>
          <li>
            <a
              href="https://belmontejo.sedelectronica.es/"
              target="_blank"
              rel="noopener noreferrer"
            >
              Sede Electrónica
            </a>
          </li>
          <li>Eventos y actividades</li>
          <li>Turismo rural</li>
        </ul>
        <ul>
          <li>
            <h2>Contacto</h2>
          </li>
          <li>
            <a href="/contacto">
              {client.address.lineOne}<br />
              {client.address.lineTwo}<br />
              {client.address.city}
              {client.address.state}
              {client.address.zip}
            </a>
          </li>
          <li>
            <a href={`tel:${client.phoneForTel}`}>
              T:
              {client.phoneFormatted}
            </a>
          </li>
          <li>
            <a href={`mailto:${client.email}`}>Enviar correo</a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="credit">
    <span>Sitio web oficial del</span>
    <a
      href="/"
      target="_blank"
      rel="noopener"
      >Ayuntamiento de Belmontejo</a
    >
    <span class="copyright"> Copyright {currentYear} - Presente</span>
  </div>
</footer>

<style lang="less">
  @import "../styles/components/footer.less";
</style>
